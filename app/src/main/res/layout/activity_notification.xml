<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="通知"></Button>

    <Button
        android:id="@+id/btn3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="通知2"></Button>

    <Button
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="下载通知"></Button>

    <Button
        android:id="@+id/btn5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="大图通知"></Button>

    <Button
        android:id="@+id/btn6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="长文本通知"></Button>

    <Button
        android:id="@+id/btn7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="InBox通知"></Button>

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="取消通知"></Button>

</LinearLayout>